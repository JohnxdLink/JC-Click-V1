<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style TargetType="RowDefinition" x:Key="rw_topHeader">
        <Setter Property="Height" Value="50" />
    </Style>

    <Style TargetType="RowDefinition" x:Key="rw_Main">
        <Setter Property="Height" Value="*"/>
    </Style>

    <Style TargetType="RowDefinition" x:Key="rw_SelectWord">
        <Setter Property="Height" Value="40" />
    </Style>

    <Style TargetType="RowDefinition" x:Key="rw_Keyboard">
        <Setter Property="Height" Value="*" />
    </Style>

    <Style TargetType="RowDefinition" x:Key="rw_Description">
        <Setter Property="Height" Value="250" />
    </Style>

    <Style TargetType="RowDefinition" x:Key="rw_SelectButton">
        <Setter Property="Height" Value="*" />
    </Style>

    <Style TargetType="RowDefinition" x:Key="rw_DscrptTitle">
        <Setter Property="Height" Value="40" />
    </Style>

    <Style TargetType="RowDefinition" x:Key="rw_Dscrpt">
        <Setter Property="Height" Value="*" />
    </Style>

</ResourceDictionary>