<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style TargetType="Grid" x:Key="gr_WholeGrid">
        <Setter Property="Background" Value="#282828" />
    </Style>

    <Style TargetType="Grid" x:Key="gr_Keyboards">
        <Setter Property="Width" Value="250" />
        <Setter Property="Height" Value="290" />
    </Style>

    <Style TargetType="Grid" x:Key="gr_Dscrpt">
        <Setter Property="Margin" Value="0, 0, 20, 0" />
    </Style>

    <Style TargetType="Grid" x:Key="gr_SelectButton">
        <Setter Property="Width" Value="230" />
        <Setter Property="Height" Value="98" />
        <Setter Property="HorizontalAlignment" Value="Right" />
        <Setter Property="VerticalAlignment" Value="Center" />
    </Style>
</ResourceDictionary>