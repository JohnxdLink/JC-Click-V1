<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style TargetType="ColumnDefinition" x:Key="cl_Logo">
        <Setter Property="Width" Value="*"/>

    </Style>

    <Style TargetType="ColumnDefinition" x:Key="cl_Close">
        <Setter Property="Width" Value="50" />
    </Style>

    <Style TargetType="ColumnDefinition" x:Key="cl_LeftSection">
        <Setter Property="Width" Value="300"/>
    </Style>

    <Style TargetType="ColumnDefinition" x:Key="cl_RightSection">
        <Setter Property="Width" Value="*" />
    </Style>

</ResourceDictionary>